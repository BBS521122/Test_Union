<configuration>

    <!-- 可选：设置别名 -->
    <typeAliases>
        <package name="com.work.work.vo"/> <!-- 替换为你的 VO 类所在的包 -->
    </typeAliases>

    <!-- 可选：设置 MyBatis 属性 -->
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <!-- 注意: log4j2 的值应该是有效的，比如 org.apache.ibatis.logging.stdout.StdOutImpl -->
        <setting name="log4j2" value="org.apache.ibatis.logging.stdout.StdOutImpl"/>
    </settings>

    <!-- 可选：配置插件（如分页插件） -->
    <!-- <plugins>...</plugins> -->

    <!-- 可选：配置数据库环境 -->
    <!-- 如果使用 Spring Boot，通常由 application.yml 提供数据源配置，无需在此配置 environment -->

</configuration>