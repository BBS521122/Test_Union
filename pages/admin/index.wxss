/* 管理端数据分析页面样式 */
.container {
  padding: 40rpx 24rpx;
}
.login-box {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  padding: 40rpx 24rpx;
  margin-bottom: 40rpx;
}
.input {
  width: 100%;
  height: 64rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
}
.login-btn, .logout-btn {
  width: 100%;
  height: 64rpx;
  background: #07C160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}
.tip {
  color: #e64340;
  font-size: 26rpx;
  margin-top: 8rpx;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
}
.stat-list {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  padding: 24rpx;
}
.stat-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.stat-item:last-child {
  border-bottom: none;
}
.stat-title {
  color: #222;
}
.stat-count {
  color: #07C160;
} 