.container {
  padding: 20rpx;
  background-color: #fff;
  min-height: 100vh;
}

.header {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  display: block;
  margin-bottom: 20rpx;
}

.meta {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.author {
  font-size: 24rpx;
  color: #007aff;
  background-color: #f0f8ff;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.time {
  font-size: 24rpx;
  color: #666;
}

.status {
  font-size: 24rpx;
  color: white;
  background-color: #4cd964;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.views {
  font-size: 24rpx;
  color: #999;
}

.summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #007aff;
}

.cover-image {
  width: 100%;
  border-radius: 8rpx;
  margin: 20rpx 0;
}

.content {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  margin-top: 20rpx;
}

/* rich-text 组件内部样式通过内联样式处理，这里不需要深度选择器 */

.loading {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}

.error {
  text-align: center;
  padding: 60rpx 20rpx;
}

.error text {
  color: #ff3b30;
  font-size: 28rpx;
  display: block;
  margin-bottom: 30rpx;
}

.error button {
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}